# Flask Configuration
SECRET_KEY=your-secret-key-here-generate-a-strong-random-string
FLASK_ENV=production

# Database Configuration
# Use Supabase PostgreSQL (FREE - 500MB database, automatic backups)
# Get your connection string from: https://supabase.com → Project Settings → Database → Connection string
DATABASE_URL=postgresql://postgres:[YOUR-PASSWORD]@db.xxxxx.supabase.co:5432/postgres

# Old SQLite (not recommended - no backups, merge conflicts)
# DATABASE_URL=sqlite:///site.db

# Application Settings
DEBUG=False
HOST=0.0.0.0
PORT=5005

# Stripe Payment Configuration
# Get your keys from: https://dashboard.stripe.com/test/apikeys
# For testing, use test keys (sk_test_... and pk_test_...)
# For production, use live keys (sk_live_... and pk_live_...)
STRIPE_SECRET_KEY=sk_test_your_stripe_secret_key_here
STRIPE_PUBLISHABLE_KEY=pk_test_your_stripe_publishable_key_here

# Stripe Webhook Secret
# Get this after creating a webhook endpoint at: https://dashboard.stripe.com/test/webhooks
# Add endpoint URL: https://yourdomain.com/stripe/webhook
# Select event: checkout.session.completed
STRIPE_WEBHOOK_SECRET=whsec_your_webhook_secret_here

# File Upload Settings
STUDENT_HUB_MAX_FILE_SIZE=52428800

# Security Settings (optional)
SESSION_COOKIE_SECURE=True
SESSION_COOKIE_HTTPONLY=True
SESSION_COOKIE_SAMESITE=Lax

# Email Configuration (Flask-Mail)
# Used for password reset, welcome emails, course confirmations, and admin bulk emails
# IONOS Email Configuration (Recommended for Al-Baqi Academy)
MAIL_SERVER=smtp.ionos.co.uk
MAIL_PORT=465
MAIL_USE_TLS=False
MAIL_USE_SSL=True
MAIL_USERNAME=your-email@yourdomain.com
MAIL_PASSWORD=your-ionos-email-password
MAIL_DEFAULT_SENDER=noreply@albaqiacademy.com

# IONOS SMTP Settings:
# - Server: smtp.ionos.co.uk (UK) or smtp.ionos.com (US/Other)
# - Port: 465 (SSL - RECOMMENDED) or 587 (TLS)
# - If using port 465: Set MAIL_USE_SSL=True and MAIL_USE_TLS=False
# - If using port 587: Set MAIL_USE_SSL=False and MAIL_USE_TLS=True
# - Username: Your full email address
# - Password: Your regular email password (no App Password needed)
# - 2GB storage limit
# - Excellent deliverability for UK/EU domains

# Email Features:
# - Welcome emails sent automatically on registration
# - Password reset emails with secure token links
# - Course enrollment confirmations after payment
# - Subscription renewal reminders
# - Admin bulk email tool at /admin/email
# - Test email configuration at /admin/test-email

# Alternative SMTP providers (if needed):
# Gmail: MAIL_SERVER=smtp.gmail.com, MAIL_PORT=587 (requires App Password)
# SendGrid: MAIL_SERVER=smtp.sendgrid.net, MAIL_PORT=587
# Mailgun: MAIL_SERVER=smtp.mailgun.org, MAIL_PORT=587
# Amazon SES: MAIL_SERVER=email-smtp.us-east-1.amazonaws.com, MAIL_PORT=587
